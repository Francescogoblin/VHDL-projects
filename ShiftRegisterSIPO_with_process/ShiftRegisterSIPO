library IEEE;
use IEEE.STD_LOGIC.1164;

entity ShiftRegisterSIPO is
   Port(
         reset    : in std_logic;
         clk      : in std_logic;
         data_in  : in std_logic;
         data_out : in std_logic_vector
        );
end ShiftRegisterSIPO;

architecture Behavioral of ShiftRegisterSIPO is

begin


process (clk, reset)
begin
for I in range 0 to data_out'RANGE-1

                if reset = '1' then
                        Q <= '0';
                elsif rising_edge (clk) then   
                        Q<=D;
                end if;
        end process;









end Behavioral;